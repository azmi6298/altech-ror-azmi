<div class="w-full flex flex-col gap-8">
  <h1 class="font-bold text-4xl text-violet-400">Search Countries</h1>
  <div class="flex flex-col gap-4">
    <input type="text" placeholder="Input country code.." class="input input-bordered input-primary w-auto" />
    <button class="btn btn-primary">Search</button>
  </div>
  <div class="overflow-x-auto">
    <table class="table table-zebra w-full">
      <!-- head -->
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>Native</th>
          <th>Emoji</th>
          <th>Capital</th>
          <th>Currency</th>
        </tr>
      </thead>
      <tbody>
        <% @countries.map do |country| %>
          <tr>
            <td><%= link_to country.name, country_path(country.code) %></td>
            <td><%= country.code %></td>
            <td><%= country.native %></td>
            <td><%= country.emoji %></td>
            <td><%= country.capital %></td>
            <td><%= country.currency %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="btn-group flex justify-end">
    <% if @page > 1 %>
      <%= link_to "«", root_path(page: @page-1), class: "btn" %>
    <% end %>
    <button class="btn">Page <%= @page %></button>
    <% if @page < @countries.total_pages %>
      <%= link_to "»", root_path(page: @page+1), class: "btn" %>
    <% end %>
  </div>
</div>
